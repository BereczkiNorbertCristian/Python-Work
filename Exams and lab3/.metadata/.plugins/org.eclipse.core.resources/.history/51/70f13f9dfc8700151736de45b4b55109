def veriftest():
    m=student_repository()
    s=Students(5,"john",7)
    s1=Students(6,"marry",8)
    
    m.add(s)
    m.add(s1)
    
    ver=Students(5,"",0)
    Validator.sverifyid(ver, m)
    
veriftest()

class ObjectException(Exception):
    
    def __init__(self,msg):
        self.__msg=msg
        
    def __str__(self):
        return self.__msg
    
            